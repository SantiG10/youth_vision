<div class="container-fluid">
   <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-2">
                <%= link_to forums_path do %>
                <i class="fa fa-angle-left icon-back color-black" aria-hidden="true"></i>
              <%end%>
            </div>
            <div class="col-xs-2 push-xs-3 forum">
              <%= image_tag "forum.svg", :alt => "Logo Youth Vision", :title => "Youth Vision", class:'img-fluid  center-block' %>
            </div>
        </div>
    </div>
	<div class="row">
      <div class="bar-forum-green">
        <div class="white-space space-big"></div>
          <div class="text-xs-center link-forums">
          <%= link_to 'Nuevo Foro'%>
          </div>
      </div>
    </div>
</div>
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12">
			<% if @forum.errors.any? %>
				<div id="error_explanation">
					<div class="alert alert-danger" role="alert">
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<i class="fa fa-times" aria-hidden="true"></i>
						</button>
						<h2 class="text-xs-center"> Se ha producido un Error</h2>
						<ul class="list-red">
							<% @forum.errors.each do |attribute, error| %>
								<li>
									<%= error %>
								</li>
							<% end %>
						</ul>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
<div class="container">
  <%= form_for(@forum) do |f| %>
 <p class="link-forum">foro</p>
    <div class="field form-group">
      <strong><%= f.label :title, "Título del foro" %></strong><br>
      <%= f.text_area :title, placeholder: "Título del foro", class: "form-control" %>
    </div>
    <div class="field form-group">
      <strong><%= f.label :description, "Descriptción" %></strong><br>
      <%= f.text_area :description, placeholder: "Comentanos de que se va a tratar el contenido de tu foro", class:"form-control" %>
    </div>

    <div class="form-group">
       <strong><%= f.label :forum_type, 'Seleccione tipo de foro' %></strong>
       <%= f.select  :forum_type, options_for_select([["Desarrollo profesional",:Profesional], ["Desarrollo de emprendimiento",:Emprendimiento], ["Desarrollo de vida",:Vida]]), class:"form-control" %>
   </div>
     <!--<div class="field">
      <%= f.label :user_id %><br>
      <%= f.number_field :user_id %>
    </div> -->
    <div class="actions">
      <%= f.submit class:"btn btn-primary"%>
    </div>
  <% end %>
</div>
