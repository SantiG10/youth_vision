<div class="container-fluid">
	<div class="row breadcrum">
		<div class="col-xs-2">
      <%= link_to root_path do%>
		    <i class="fa fa-angle-left icon-back color-black" aria-hidden="true"></i>
      <%end%>
		</div>
    <div class="white-space space-small"></div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
      <br><br><h2>INICIAR SESIÓN</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "CORREO" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "CONTRASEÑA",class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recuérdame" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "INICIAR SESIÓN", class: "btn btn-register btn-orange form-control" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
