<div class="container-fluid">
	<div class="row breadcrum">
		<div class="col-xs-2">
      <%= link_to root_path do%>
		    <i class="fa fa-angle-left icon-back color-black" aria-hidden="true"></i>
      <%end%>
		</div>
    <div class="white-space space-small"></div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
      <br><br><h2>REGISTRARSE</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :first_name, "Nombres" %><br />
          <%= f.text_field :first_name, autofocus: true, placeholder: "PRIMER NOMBRE", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Apellidos" %><br />
          <%= f.text_field :last_name, placeholder: "APELLIDOS" ,class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :username, "Usuario" %><br />
          <%= f.text_field :username, placeholder: "USUARIO" ,class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, placeholder: "CORREO",class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Contraseña" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> mínimo de caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: "CONTRASEÑA" ,
                  autocomplete: "off", class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmación de contraseña" %><br />
          <%= f.password_field :password_confirmation,
                placeholder:"CONFIRMACIÓN DE CONTRASEÑA" ,autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "REGISTRO", class: "btn btn-register btn-orange form-control"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
