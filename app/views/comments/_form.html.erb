    <div class="field">
      <%= f.label :forum_topic %><br>
      <%= f.number_field :forum_id %>
    </div>
    <div class="field">
      <%= f.label :user_id %><br>
      <%= f.number_field :user_id %>
    </div>
  -->
</div>
<% end %>
