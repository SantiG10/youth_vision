<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Profession</th>
      <th>Last company</th>
      <th>Last position</th>
      <th>Country</th>
      <th>City</th>
      <th>Responsibilities</th>
      <th>Type job</th>
      <th>Honors</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.email %></td>
        <td><%= profile.profession %></td>
        <td><%= profile.last_company %></td>
        <td><%= profile.last_position %></td>
        <td><%= profile.country %></td>
        <td><%= profile.state %></td>
        <td><%= profile.responsibilities %></td>
        <td><%= profile.type_job %></td>
        <td><%= profile.honors %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if can? :manage, profile%>
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
          <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

