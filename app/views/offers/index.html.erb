<div class="container-fluid">
	
   <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-2">
                <%= link_to root_path do %>
                <i class="fa fa-angle-left icon-back color-black" aria-hidden="true"></i>
              <%end%>
            </div>
            <div class="col-xs-2 push-xs-3 offers">
              <%= image_tag "red.svg", :alt => "Red", :title => "Red", class:'img-fluid  center-block' %>
            </div>
        </div>
        <p id="notice"><%= notice %></p>
    </div>
</div>

  <div class="container-fluid">
    <div class="row">
      <div class="bar-offers">
        <div class="white-space space-big"></div>
          <div class="text-xs-center link-forums">
          <%= link_to 'aplicar a trabajos', offers_path %>
          <%= image_tag "red-offers.svg", class:'m-x-auto d-block img-fluid img-offer' %>
          </div>
      </div>
    </div>
    <div class="text-xs-center title-offer">
		<% @offers.each do |offer| %>
			<p class="title-2">Título: </p><%= offer.title %><br>
			<p class="title-2">Descripción: </p><%= offer.description %><br>
			<p class="title-2">Requerimientos: </p><%= offer.requirements %><br>
			<div class="white-space space-small"></div>
			<%= link_to 'Show', offer, class:'btn btn-login btn-green' %><hr>
		<% end %>
    </div>

</div>
