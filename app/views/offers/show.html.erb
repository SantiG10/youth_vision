<div class="container-fluid">
  
   <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-2">
                <%= link_to apply_path do %>
                <i class="fa fa-angle-left icon-back color-black" aria-hidden="true"></i>
              <%end%>
            </div>
            <div class="col-xs-2 push-xs-3 offers">
              <%= image_tag "red.svg", :alt => "Red", :title => "Red", class:'img-fluid  center-block' %>
            </div>
        </div>
    </div>
</div>

  <div class="container-fluid">
    <div class="row">
      <div class="bar-offers">
        <div class="white-space space-big"></div>
          <div class="text-xs-center link-forums">
          <%= link_to 'Oferta', offers_path %>
          <%= image_tag "red-offers.svg", class:'m-x-auto d-block img-fluid img-offer' %>
          </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 text-xs-center title-offer-2">
        <p class="title-2">Oferta: </p>
         <%= @offer.title %>
      </div>
    </div><hr>

    <div class="row">
      <div class="col-xs-12 text-xs-center title-offer-2">
        <p class="title-2">Decripción: </p>
         <%= @offer.description %>
      </div>
    </div><hr>

    <div class="row">
      <div class="col-xs-12 text-xs-center title-offer-2">
        <p class="title-2">Salario:</p>
         <%= @offer.salary %>
      </div><hr>

    </div>
    <div class="row">
      <div class="col-xs-12 text-xs-center title-offer-2">
         <p class="title-2">Url:</p>
         <a href="<%=@offer.url%> " target="_blank" class="title-offer-2"><%= @offer.url%></a>
      </div>
    </div><hr>

    <div class="row">
      <div class="col-xs-12 text-xs-center title-offer-2">
        <p class="title-2">Requirimientos:</p>
        <%= @offer.requirements %>
      </div>
    </div><hr>

    <div class="row">
      <div class="col-xs-12 text-xs-center title-offer-2">
        <p class="title-2">Ubicación:</p>
         <%= @offer.location %>
       </div>
    </div><hr>

    <br>
    <center>
       <div>
          <%= link_to "Aplicar","/offers/#{@offer.id}/apply", method: :put, class:"btn btn-login btn-green center",data: { confirm: 'Está seguro?' }%>
      </div>
      </center>

</div>
